---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Signup">
	<main class="py-10">
        <div class="flex justify-evenly">
            <form class="flex gap-5 flex-col w-2/3 lg:w-1/3">
                <label class="text-white font-bold flex flex-col gap-2">
                    Username:
                    <input class="text-black font-normal p-1" type="text" name="username" required />
                </label>
                <label class="text-white font-bold flex flex-col gap-2">
                    Password:
                    <input class="text-black font-normal p-1" type="password" name="password" required minlength="6" />
                </label>
                <label class="text-white font-bold flex flex-col gap-2">
                    Repeat Password:
                    <input class="text-black font-normal p-1 " type="password" name="repeat-password" required minlength="6" />
                </label>
                <div class="py-2">
                    <button class="bg-blue-400 bg-opacity-80 hover:shadow-md hover:bg-opacity-60 duration-200 transition-all float-end text-white font-bold py-2 rounded-md shadow-black w-full">
                        Create Account
                    </button>
                </div>
            </form>
        </div>
        <div class="text-center">
            <a href="/login" class="text-white hover:underline opacity-80">Already have an account?</a>
        </div>
	</main>
</Layout>