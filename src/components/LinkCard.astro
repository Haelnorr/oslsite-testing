---
interface Props {
	label: string;
	href: string;
}

const { href, label} = Astro.props;
---

<li class="link-card flex p-1 bg-slate-800 bg-none rounded-lg">
	<a href={href} class="w-full leading-5 p-5 rounded-lg text-white opacity-80">
		<h2 class="m-0 text-xl">
			{label}
			<span>&rarr;</span>
		</h2>
	</a>
</li>
<style>
	.link-card {
		background-size: 400%;
		background-position: 100%;
		transition: background-position 1.2s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	h2 {
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: linear-gradient(90deg, rgb(1, 156, 220) 0%, rgb(0, 35, 91) 35%, rgb(255, 185, 1) 100%);
	}
</style>
